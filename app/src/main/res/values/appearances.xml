<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.TimeCAlling" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="TextAppearance.TimeCAlling.Head1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.TimeCAlling.Head2">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TimeCAlling.Body1">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TimeCAlling.Warning">
        <item name="textFillColor">@color/warning</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TimeCAlling.Bnv">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="fontFamily">@font/pretendard_medium</item>
    </style>
</resources>