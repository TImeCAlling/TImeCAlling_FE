<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_result_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지난 일정을 되돌아보았어요!"
            style="@style/TextAppearance.TimeCAlling.Head1"
            android:textColor="@color/black"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv_result_head2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더 나은습관을 만들어가는 당신의 작은\n도전에 동참할 수 있어 감사합니다.\n항상 응원할게요!"
            android:textColor="@color/gray_800"
            android:textSize="14sp"
            android:textAlignment="center"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_result_head"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:layout_width="240dp"
            android:layout_height="396dp"
            android:src="@drawable/img_checklist_result"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_result_head2"
            app:layout_constraintBottom_toTopOf="@id/btn_checklist_result"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_checklist_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="확인"
            style="@style/TextAppearance.TimeCAlling.Button"
            android:layout_marginHorizontal="21dp"
            android:layout_marginBottom="48dp"
            android:paddingVertical="20dp"
            android:background="@drawable/shape_rect_999_mint_fill"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>