            android:layout_marginTop="28dp">

            <ImageView
                android:id="@+id/iv_onboarding_term_unselected_oval_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/shape_rect_999_gray300_fill"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_onboarding_term_unselected_check_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_check_white"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_onboarding_term_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="(필수) 개인정보 수집/이용 동의"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black_700"
            app:layout_constraintTop_toTopOf="@id/cl_onboarding_term_btn_3"
            app:layout_constraintBottom_toBottomOf="@id/cl_onboarding_term_btn_3"
            app:layout_constraintStart_toStartOf="@+id/tv_onboarding_term_2"/>

        <!-- arrow -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_onboarding_term_arro_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.06"
            app:layout_constraintStart_toEndOf="@id/tv_onboarding_term_3"
            app:layout_constraintTop_toTopOf="@id/tv_onboarding_term_3"
            app:layout_constraintBottom_toBottomOf="@id/tv_onboarding_term_3"
            android:layout_marginStart="4dp">

            <ImageView
                android:id="@+id/iv_onboarding_term_arrow_down_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_keyboard_arrow_down"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_onboarding_term_arrow_up_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_keyboard_arrow_up"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 약관 4 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_onboarding_term_btn_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.048"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_onboarding_term_btn_3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp">

            <ImageView
                android:id="@+id/iv_onboarding_term_unselected_oval_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/shape_rect_999_gray300_fill"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_onboarding_term_unselected_check_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_check_white"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_onboarding_term_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="(필수) 위치 정보 제공"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black_700"
            app:layout_constraintTop_toTopOf="@id/cl_onboarding_term_btn_4"
            app:layout_constraintBottom_toBottomOf="@id/cl_onboarding_term_btn_4"
            app:layout_constraintStart_toStartOf="@+id/tv_onboarding_term_3"/>

        <!-- arrow -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_onboarding_term_arro_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.06"
            app:layout_constraintStart_toEndOf="@id/tv_onboarding_term_4"
            app:layout_constraintTop_toTopOf="@id/tv_onboarding_term_4"
            app:layout_constraintBottom_toBottomOf="@id/tv_onboarding_term_4"
            android:layout_marginStart="4dp">

            <ImageView
                android:id="@+id/iv_onboarding_term_arrow_down_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_keyboard_arrow_down"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_onboarding_term_arrow_up_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_keyboard_arrow_up"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 약관 5 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_onboarding_term_btn_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.048"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_onboarding_term_btn_4"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp">

            <ImageView
                android:id="@+id/iv_onboarding_term_unselected_oval_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/shape_rect_999_gray300_fill"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_onboarding_term_unselected_check_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_check_white"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_onboarding_term_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="마케팅 수신 동의"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black_700"
            app:layout_constraintTop_toTopOf="@id/cl_onboarding_term_btn_5"
            app:layout_constraintBottom_toBottomOf="@id/cl_onboarding_term_btn_5"
            app:layout_constraintStart_toStartOf="@+id/tv_onboarding_term_4"/>

        <!-- 다음 btn -->
        <TextView
            android:id="@+id/tv_onboarding_term_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_rect_999_mint_fill"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:text="다음"
            android:paddingVertical="20dp"
            style="@style/TextAppearance.TimeCAlling.Button"
            android:gravity="center"/>

