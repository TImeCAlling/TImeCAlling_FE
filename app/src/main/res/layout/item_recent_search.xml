<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_recent_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_recent_search_map"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_map"/>

        <TextView
            android:id="@+id/tv_recent_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="장소"
            style="@style/TextAppearance.TimeCAlling.Body1"
            android:layout_weight="1"/>


        <ImageView
            android:id="@+id/iv_recent_search_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"/>

    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_300"
        app:layout_constraintTop_toBottomOf="@id/layout_recent_search"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="14dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>