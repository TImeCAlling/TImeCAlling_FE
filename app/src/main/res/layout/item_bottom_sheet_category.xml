<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_rect_16_white_fill_shadow">

    <LinearLayout
        android:id="@+id/layout_category_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="20dp"
        android:paddingHorizontal="36dp">

        <ImageView
            android:id="@+id/iv_category_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_icon"
            android:backgroundTint="@color/category_purple"/>
        
        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="카테고리 이름"
            style="@style/TextAppearance.TimeCAlling.Head3"
            android:textColor="@color/gray_900"/>

        <ImageView
            android:id="@+id/iv_category_select"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_circle_check"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>