<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:layout_width="2dp"
        android:layout_height="120dp"
        android:background="#e4e4e4"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/view_today_schedule"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/shape_rect_999_gray300_fill"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_today_schedule_time_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="오전"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/black_500"
        app:layout_constraintStart_toEndOf="@id/view_today_schedule"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/tv_today_schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="9:00"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/gray_600"
        app:layout_constraintStart_toEndOf="@id/tv_today_schedule_time_type"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="4dp"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_today_schedule_container"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_rect_16_gray100_fill_gray300_line_1"
        app:layout_constraintStart_toStartOf="@id/tv_today_schedule_time_type"
        app:layout_constraintTop_toBottomOf="@id/tv_today_schedule_time_type"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layout_today_schedule_time_left"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:orientation="vertical"
            android:background="@drawable/shape_rect_999_mint300_fill"
            android:layout_marginStart="16dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/tv_today_schedule_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24\nmin"
                android:textSize="12sp"
                android:textColor="@color/mint_main"
                android:fontFamily="@font/pretendard_semibold"
                android:textAlignment="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_today_schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="컴퓨터 구조 수업"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_800"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/layout_today_schedule_time_left"
            app:layout_constraintStart_toEndOf="@id/layout_today_schedule_time_left"/>
        <TextView
            android:id="@+id/tv_today_schedule_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="일정 설명"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black_500"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@id/layout_today_schedule_time_left"
            app:layout_constraintStart_toEndOf="@id/layout_today_schedule_time_left"/>
        <ImageView
            android:id="@+id/img_today_schedule_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_more_black"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>