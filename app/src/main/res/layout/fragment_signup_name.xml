<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- top bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="23dp">

            <ImageView
                android:id="@+id/iv_onboarding_name_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_onboarding_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                style="@style/TextAppearance.TimeCAlling.Head2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- line -->
        <View
            android:id="@+id/view_onboarding_name_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_300"
            app:layout_constraintTop_toBottomOf="@id/topbar"
            android:layout_marginTop="14dp"/>

        <View
            android:id="@+id/view_onboarding_name_line_mint"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@color/mint_main"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topbar"
            android:layout_marginTop="14dp"/>

        <!-- 본문 -->
        <TextView
            android:id="@+id/tv_onboarding_name_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="이름을 입력해 주세요"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/view_onboarding_name_line"/>

        <TextView
            android:id="@+id/tv_onboarding_name_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="1글자 이상 작성해 주세요"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/gray_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_onboarding_name_title1"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            />

        <!-- 입력 필드 -->
        <EditText
            android:id="@+id/et_onboarding_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect_10_gray200_fill"
            app:layout_constraintTop_toBottomOf="@id/tv_onboarding_name_subtitle"
            android:layout_marginHorizontal="20dp"
            android:hint="EX) 김지각"
            android:text=""
            android:paddingVertical="20dp"
            style="@style/TextAppearance.TimeCAlling.Body1.Hint"
            android:gravity="left"
            android:paddingStart="20dp"
            android:layout_marginTop="40dp"/>

        <!-- delete 버튼 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_onboarding_name_delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.048"
            app:layout_constraintTop_toTopOf="@id/et_onboarding_name_input"
            app:layout_constraintBottom_toBottomOf="@id/et_onboarding_name_input"
            app:layout_constraintEnd_toEndOf="@id/et_onboarding_name_input"
            android:layout_marginEnd="20dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_onboarding_term_delete_oval"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/shape_rect_999_mint500_fill"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_onboarding_term_delete"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_delete"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- check 표시 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_onboarding_name_check"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.048"
            app:layout_constraintTop_toTopOf="@id/et_onboarding_name_input"
            app:layout_constraintBottom_toBottomOf="@id/et_onboarding_name_input"
            app:layout_constraintEnd_toEndOf="@id/et_onboarding_name_input"
            android:layout_marginEnd="20dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_onboarding_term_check"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_check"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- error 표시 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_onboarding_name_error"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.048"
            app:layout_constraintTop_toTopOf="@id/et_onboarding_name_input"
            app:layout_constraintBottom_toBottomOf="@id/et_onboarding_name_input"
            app:layout_constraintEnd_toEndOf="@id/et_onboarding_name_input"
            android:layout_marginEnd="20dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_onboarding_term_error_oval"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/shape_rect_999_error_fill"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_onboarding_term_error"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_delete"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- 글자 수 -->
        <TextView
            android:id="@+id/tv_onboarding_name_maxLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="/5"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/black_700"
            app:layout_constraintEnd_toEndOf="@id/et_onboarding_name_input"
            app:layout_constraintTop_toBottomOf="@id/et_onboarding_name_input"
            android:layout_marginTop="4dp"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_onboarding_name_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="0"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/mint_main"
            app:layout_constraintEnd_toStartOf="@id/tv_onboarding_name_maxLength"
            app:layout_constraintTop_toBottomOf="@id/et_onboarding_name_input"
            android:layout_marginTop="4dp"
            />

        <!-- btn -->
        <TextView
            android:id="@+id/tv_onboarding_name_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_rect_999_gray300_fill"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:text="다음"
            android:paddingVertical="20dp"
            style="@style/TextAppearance.TimeCAlling.Button.Gray"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>