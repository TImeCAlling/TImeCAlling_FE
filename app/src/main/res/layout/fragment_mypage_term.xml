<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- top bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="23dp">

            <ImageView
                android:id="@+id/iv_mypage_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_mypage_term_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_mypage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용약관"
                style="@style/TextAppearance.TimeCAlling.Head2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_mypage_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            app:layout_constraintTop_toBottomOf="@id/topbar"
            android:layout_marginTop="14dp"/>

        <!-- 서비스 이용약관 -->
        <TextView
            android:id="@+id/tv_mypage_term1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="서비스 이용약관"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_900"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_mypage_line"
            android:layout_marginStart="20dp"
            android:layout_marginTop="54dp"/>

        <ImageView
            android:id="@+id/iv_mypage_term1_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/gray_500"
            app:layout_constraintTop_toTopOf="@id/tv_mypage_term1"
            app:layout_constraintBottom_toBottomOf="@id/tv_mypage_term1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>

        <!-- 개인정보 수집/이용 동의 -->
        <TextView
            android:id="@+id/tv_mypage_term2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="개인정보 수집 및 이용"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_900"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_mypage_term1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="41dp"/>

        <ImageView
            android:id="@+id/iv_mypage_term2_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/gray_500"
            app:layout_constraintTop_toTopOf="@id/tv_mypage_term2"
            app:layout_constraintBottom_toBottomOf="@id/tv_mypage_term2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>

        <!-- 위치 정보 제공 -->
        <TextView
            android:id="@+id/tv_mypage_term3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="위치 정보 제공"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_900"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_mypage_term2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="41dp"/>

        <ImageView
            android:id="@+id/iv_mypage_term3_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/gray_500"
            app:layout_constraintTop_toTopOf="@id/tv_mypage_term3"
            app:layout_constraintBottom_toBottomOf="@id/tv_mypage_term3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>

        <!-- 알림 권한 요청 -->
        <TextView
            android:id="@+id/tv_mypage_term4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="알림 권한 요청"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_900"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_mypage_term3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="41dp"/>

        <ImageView
            android:id="@+id/iv_mypage_term4_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/gray_500"
            app:layout_constraintTop_toTopOf="@id/tv_mypage_term4"
            app:layout_constraintBottom_toBottomOf="@id/tv_mypage_term4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>

        <!-- 마케팅 정보 수신 -->
        <TextView
            android:id="@+id/tv_mypage_term5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="마케팅 정보 수신"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_900"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_mypage_term4"
            android:layout_marginStart="20dp"
            android:layout_marginTop="41dp"/>

        <ImageView
            android:id="@+id/iv_mypage_term5_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/gray_500"
            app:layout_constraintTop_toTopOf="@id/tv_mypage_term5"
            app:layout_constraintBottom_toBottomOf="@id/tv_mypage_term5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>

        <!-- 맞춤형 서비스 제공 및 데이터 분석 -->
        <TextView
            android:id="@+id/tv_mypage_term6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="맞춤형 서비스 제공 및 데이터 분석"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_900"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_mypage_term5"
            android:layout_marginStart="20dp"
            android:layout_marginTop="41dp"/>

        <ImageView
            android:id="@+id/iv_mypage_term6_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/gray_500"
            app:layout_constraintTop_toTopOf="@id/tv_mypage_term6"
            app:layout_constraintBottom_toBottomOf="@id/tv_mypage_term6"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>

        <!-- 이용약관 본문 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/sv_mypage_term_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_mypage_line"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_mypage_term_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="약관 내용"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/gray_800"
                android:paddingVertical="20dp"/>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
