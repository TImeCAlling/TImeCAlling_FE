<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- top bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="23dp">

            <ImageView
                android:id="@+id/iv_onboarding_time_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_onboarding_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                style="@style/TextAppearance.TimeCAlling.Head2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- line -->
        <View
            android:id="@+id/view_onboarding_time_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_300"
            app:layout_constraintTop_toBottomOf="@id/topbar"
            android:layout_marginTop="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:src="@drawable/ic_line_mint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_onboarding_time_line"/>
        
        <!-- 본문 -->
        <TextView
            android:id="@+id/tv_onboarding_time_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="평균 준비 시간은 어떻게 되시나요?"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/view_onboarding_time_line"/>

        <!-- 선택 필드 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_onboarding_time_title1"
            android:layout_marginTop="63dp"
            android:layout_marginHorizontal="11dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_time_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                tools:listitem="@layout/item_onboarding_time" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- btn -->
        <TextView
            android:id="@+id/tv_onboarding_time_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_rect_999_mint_fill"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:text="다음"
            android:paddingVertical="20dp"
            style="@style/TextAppearance.TimeCAlling.Button"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>