<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- top bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="23dp">

            <ImageView
                android:id="@+id/iv_myprofile_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_myprofile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음성 정보"
                style="@style/TextAppearance.TimeCAlling.Head2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_myprofile_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            app:layout_constraintTop_toBottomOf="@id/topbar"
            android:layout_marginTop="14dp"/>

        <!-- 성별 -->
        <TextView
            android:id="@+id/tv_myprofile_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="성별"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_900"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_myprofile_line"
            android:layout_marginStart="20dp"
            android:layout_marginTop="54dp"/>

        <TextView
            android:id="@+id/tv_myprofile_gender_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="여성"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_500"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_myprofile_gender"
            android:layout_marginEnd="60dp"/>

        <ImageView
            android:id="@+id/iv_myprofile_gender_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/gray_500"
            app:layout_constraintTop_toTopOf="@id/tv_myprofile_gender"
            app:layout_constraintBottom_toBottomOf="@id/tv_myprofile_gender"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>

        <!-- 언어 -->
        <TextView
            android:id="@+id/tv_myprofile_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="언어"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_900"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_myprofile_gender"
            android:layout_marginStart="20dp"
            android:layout_marginTop="41dp"/>

        <TextView
            android:id="@+id/tv_myprofile_language_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="한국어"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_500"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_myprofile_language"
            android:layout_marginEnd="60dp"/>

        <ImageView
            android:id="@+id/iv_myprofile_language_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/gray_500"
            app:layout_constraintTop_toTopOf="@id/tv_myprofile_language"
            app:layout_constraintBottom_toBottomOf="@id/tv_myprofile_language"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>

        <!-- 볼륨 -->
        <TextView
            android:id="@+id/tv_myprofile_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="볼륨"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_900"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_myprofile_language"
            android:layout_marginStart="20dp"
            android:layout_marginTop="41dp"/>

        <!-- 볼륨 bar -->
        <View
            android:id="@+id/view_signup_name_volume_bar"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@drawable/shape_rect_999_gray300_fill"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_myprofile_volume"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="19dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/view_signup_name_volume_bar"
            app:layout_constraintEnd_toEndOf="@id/view_signup_name_volume_bar"
            app:layout_constraintTop_toTopOf="@id/view_signup_name_volume_bar"
            app:layout_constraintBottom_toBottomOf="@id/view_signup_name_volume_bar">

            <View
                android:id="@+id/view_signup_name_volume_standard_0"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/shape_rect_999_gray400_fill"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"/>

            <View
                android:id="@+id/view_signup_name_volume_standard_1"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/shape_rect_999_gray400_fill"
                app:layout_constraintStart_toEndOf="@id/view_signup_name_volume_standard_0"
                app:layout_constraintEnd_toStartOf="@id/view_signup_name_volume_standard_2"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/view_signup_name_volume_standard_2"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/shape_rect_999_gray400_fill"
                app:layout_constraintStart_toEndOf="@id/view_signup_name_volume_standard_1"
                app:layout_constraintEnd_toStartOf="@id/view_signup_name_volume_standard_3"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/view_signup_name_volume_standard_3"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/shape_rect_999_gray400_fill"
                app:layout_constraintStart_toEndOf="@id/view_signup_name_volume_standard_2"
                app:layout_constraintEnd_toStartOf="@id/view_signup_name_volume_standard_4"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/view_signup_name_volume_standard_4"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/shape_rect_999_gray400_fill"
                app:layout_constraintStart_toEndOf="@id/view_signup_name_volume_standard_3"
                app:layout_constraintEnd_toStartOf="@id/view_signup_name_volume_standard_5"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/view_signup_name_volume_standard_5"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/shape_rect_999_gray400_fill"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="invisible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_signup_name_volume_bar_mint"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:background="@drawable/shape_rect_999_mint_fill"
            app:layout_constraintWidth_percent="0.59"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_myprofile_volume"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="19dp"/>

        <View
            android:id="@+id/view_signup_name_volume_bar_circle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_rect_999_white_fill_mint_shadow"
            app:layout_constraintTop_toTopOf="@id/view_signup_name_volume_bar_mint"
            app:layout_constraintBottom_toBottomOf="@id/view_signup_name_volume_bar_mint"
            app:layout_constraintEnd_toEndOf="@id/view_signup_name_volume_bar_mint"
            android:layout_marginEnd="-8dp"
            android:visibility="visible"/>

        <!-- 속도 -->
        <TextView
            android:id="@+id/tv_myprofile_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="속도"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_900"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_signup_name_volume_bar"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25.5dp"/>

        <!-- 속도 bar -->
        <View
            android:id="@+id/view_signup_name_speed_bar"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@drawable/shape_rect_999_gray300_fill"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_myprofile_speed"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="19dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/view_signup_name_speed_bar"
            app:layout_constraintEnd_toEndOf="@id/view_signup_name_speed_bar"
            app:layout_constraintTop_toTopOf="@id/view_signup_name_speed_bar"
            app:layout_constraintBottom_toBottomOf="@id/view_signup_name_speed_bar">

            <View
                android:id="@+id/view_signup_name_speed_standard_0"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/shape_rect_999_gray400_fill"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"/>

            <View
                android:id="@+id/view_signup_name_speed_standard_1"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/shape_rect_999_gray400_fill"
                app:layout_constraintStart_toEndOf="@id/view_signup_name_speed_standard_0"
                app:layout_constraintEnd_toStartOf="@id/view_signup_name_speed_standard_2"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/view_signup_name_speed_standard_2"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/shape_rect_999_gray400_fill"
                app:layout_constraintStart_toEndOf="@id/view_signup_name_speed_standard_1"
                app:layout_constraintEnd_toStartOf="@id/view_signup_name_speed_standard_3"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/view_signup_name_speed_standard_3"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/shape_rect_999_gray400_fill"
                app:layout_constraintStart_toEndOf="@id/view_signup_name_speed_standard_2"
                app:layout_constraintEnd_toStartOf="@id/view_signup_name_speed_standard_4"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/view_signup_name_speed_standard_4"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/shape_rect_999_gray400_fill"
                app:layout_constraintStart_toEndOf="@id/view_signup_name_speed_standard_3"
                app:layout_constraintEnd_toStartOf="@id/view_signup_name_speed_standard_5"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/view_signup_name_speed_standard_5"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/shape_rect_999_gray400_fill"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="invisible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_signup_name_speed_bar_mint"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:background="@drawable/shape_rect_999_mint_fill"
            app:layout_constraintWidth_percent="0.39"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_myprofile_speed"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="19dp"/>

        <View
            android:id="@+id/view_signup_name_speed_bar_circle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_rect_999_white_fill_mint_shadow"
            app:layout_constraintTop_toTopOf="@id/view_signup_name_speed_bar_mint"
            app:layout_constraintBottom_toBottomOf="@id/view_signup_name_speed_bar_mint"
            app:layout_constraintEnd_toEndOf="@id/view_signup_name_speed_bar_mint"
            android:layout_marginEnd="-8dp"
            android:visibility="visible"/>

        <!-- bottomSheet background -->
        <View
            android:id="@+id/view_myprofile_bottomSheet_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bottomsheet_background"
            android:visibility="gone"/>

        <!-- 성별 bottomSheet -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_mypageVoice_bottom_sheet_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/shape_bottom_sheet">

                <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                    android:id="@+id/drag_handle_mypageVoice_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_mypageVoice_bottom_sheet_gender_close"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.068"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_mypageVoice_gender_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_mypageVoice_gender_title"
                    android:layout_marginEnd="20dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_rect_999_white_fill_gray300_line_1"/>
                    <ImageView
                        android:id="@+id/iv_mypageVoice_bottom_sheet_gender_close"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/ic_delete"
                        android:backgroundTint="@color/gray_700"
                        app:layout_constraintWidth_percent="0.45"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_mypageVoice_gender_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    style="@style/TextAppearance.TimeCAlling.Head2"
                    android:textColor="@color/gray_600"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/drag_handle_mypageVoice_gender"/>

                <!-- 선택 필드 -->
                <TextView
                    android:id="@+id/tv_mypageVoice_gender_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text="성별을 선택해주세요"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_mypageVoice_gender_title"/>

                <!-- 여성 -->
                <TextView
                    android:id="@+id/tv_mypageVoice_gender_women"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여성"
                    android:textSize="20sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/black_700"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_mypageVoice_gender_title1"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="44dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_mypageVoice_gender_btn_women"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.068"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_mypageVoice_gender_women"
                    app:layout_constraintBottom_toBottomOf="@id/tv_mypageVoice_gender_women"
                    android:layout_marginEnd="20dp">

                    <ImageView
                        android:id="@+id/iv_mypageVoice_gender_oval_women"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/shape_rect_999_mint300_fill_mint_line_1"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintWidth_percent="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_mypageVoice_gender_check_women"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/ic_check_mint"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintWidth_percent="0.7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 남성 -->
                <TextView
                    android:id="@+id/tv_mypageVoice_gender_men"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남성"
                    android:textSize="20sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/black_700"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_mypageVoice_gender_women"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_mypageVoice_gender_btn_men"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.068"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_mypageVoice_gender_men"
                    app:layout_constraintBottom_toBottomOf="@id/tv_mypageVoice_gender_men"
                    android:layout_marginEnd="20dp">

                    <ImageView
                        android:id="@+id/iv_mypageVoice_gender_oval_men"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/shape_rect_999_gray300_fill"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintWidth_percent="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_mypageVoice_gender_check_men"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/ic_check_white"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintWidth_percent="0.7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 저장 btn -->
                <TextView
                    android:id="@+id/tv_mypageVoice_gender_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_mypageVoice_gender_men"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/shape_rect_999_mint_fill"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="31dp"
                    android:text="저장하기"
                    android:textColor="@color/white"
                    android:paddingVertical="20dp"
                    style="@style/TextAppearance.TimeCAlling.Button"
                    android:gravity="center"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <!-- 언어 bottomSheet -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_mypageVoice_bottom_sheet_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/shape_bottom_sheet">

                <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                    android:id="@+id/drag_handle_mypageVoice_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_mypageVoice_bottom_sheet_language_close"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.068"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_mypageVoice_language_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_mypageVoice_language_title"
                    android:layout_marginEnd="20dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
