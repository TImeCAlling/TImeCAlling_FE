<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- top bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="23dp">

            <ImageView
                android:id="@+id/iv_onboarding_spare_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_onboarding_spare_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                style="@style/TextAppearance.TimeCAlling.Head2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- line -->
        <View
            android:id="@+id/view_onboarding_spare_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_300"
            app:layout_constraintTop_toBottomOf="@id/topbar"
            android:layout_marginTop="14dp"/>

        <View
            android:id="@+id/view_onboarding_spare_line_mint"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@color/mint_main"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topbar"
            android:layout_marginTop="14dp"/>

        <!-- 본문 -->
        <TextView
            android:id="@+id/tv_onboarding_spare_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="원하는 여유시간이\n어느 정도인가요?"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/view_onboarding_spare_line"/>

        <!-- 선택지 배경 -->
        <TextView
            android:id="@+id/tv_onboarding_spare_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintTop_toBottomOf="@id/tv_onboarding_spare_title1"
            android:background="@drawable/shape_rect_999_gray200_fill"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"/>

        <!-- 선택지 1 -->
        <TextView
            android:id="@+id/tv_onboarding_spare_option_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/tv_onboarding_spare_bg"
            app:layout_constraintBottom_toBottomOf="@id/tv_onboarding_spare_bg"
            app:layout_constraintStart_toStartOf="@id/tv_onboarding_spare_bg"
            app:layout_constraintEnd_toStartOf="@id/view_onboarding_spare_1"
            android:background="@drawable/shape_rect_999_gray200_fill"
            android:text="딱딱"
            android:paddingVertical="12dp"
            style="@style/TextAppearance.TimeCAlling.Button.Gray"
            android:gravity="center"/>

        <!-- 선택지 2 -->
        <TextView
            android:id="@+id/tv_onboarding_spare_option_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/tv_onboarding_spare_bg"
            app:layout_constraintBottom_toBottomOf="@id/tv_onboarding_spare_bg"
            app:layout_constraintStart_toEndOf="@id/view_onboarding_spare_1"
            app:layout_constraintEnd_toStartOf="@id/view_onboarding_spare_2"
            android:background="@drawable/shape_rect_999_mint200_fill_mint_line_1"
            android:text="여유"
            android:paddingVertical="12dp"
            style="@style/TextAppearance.TimeCAlling.Button.Mint"
            android:gravity="center"/>

        <!-- 선택지 3 -->
        <TextView
            android:id="@+id/tv_onboarding_spare_option_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/tv_onboarding_spare_bg"
            app:layout_constraintBottom_toBottomOf="@id/tv_onboarding_spare_bg"
            app:layout_constraintStart_toEndOf="@id/view_onboarding_spare_2"
            app:layout_constraintEnd_toEndOf="@id/tv_onboarding_spare_bg"
            android:background="@drawable/shape_rect_999_gray200_fill"
            android:text="넉넉"
            android:paddingVertical="12dp"
            style="@style/TextAppearance.TimeCAlling.Button.Gray"
            android:gravity="center" />

        <!-- 공백 view -->
        <View
            android:id="@+id/view_onboarding_spare_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.048"
            app:layout_constraintStart_toEndOf="@id/tv_onboarding_spare_option_1"
            app:layout_constraintEnd_toStartOf="@id/tv_onboarding_spare_option_2"
            app:layout_constraintTop_toTopOf="@id/tv_onboarding_spare_bg"
            />

        <View
            android:id="@+id/view_onboarding_spare_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.048"
            app:layout_constraintStart_toEndOf="@id/tv_onboarding_spare_option_2"
            app:layout_constraintEnd_toStartOf="@id/tv_onboarding_spare_option_3"
            app:layout_constraintTop_toTopOf="@id/tv_onboarding_spare_bg"
            />

        <!-- btn -->
        <TextView
            android:id="@+id/tv_onboarding_spare_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_rect_999_mint_fill"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:text="다음"
            android:paddingVertical="20dp"
            style="@style/TextAppearance.TimeCAlling.Button"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>