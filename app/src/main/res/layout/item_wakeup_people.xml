<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_20_mint200_fill"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="19dp"
        android:paddingVertical="12dp"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_wakeup_people_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/iv_people_profile_example"/>

        <TextView
            android:id="@+id/tv_wakeup_people_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="김승혁"
            style="@style/TextAppearance.TimeCAlling.Head1"
            android:layout_marginStart="16dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_search_result_next"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_location_next"
            android:padding="2dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>