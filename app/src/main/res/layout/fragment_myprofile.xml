<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- top bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="23dp">

            <ImageView
                android:id="@+id/iv_myprofile_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_myprofile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 프로필"
                style="@style/TextAppearance.TimeCAlling.Head2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="18dp"
            android:background="@color/mint_300"/>

        <!-- 사진 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_myprofile_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.337"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topbar"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="47dp"
            android:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_myprofile_oval_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rect_999_mint300_fill"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/iv_myprofile_face"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_face"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.56"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="visible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 카메라 버튼 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_myprofile_camera"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintEnd_toEndOf="@id/cl_myprofile_photo"
            app:layout_constraintBottom_toBottomOf="@id/cl_myprofile_photo"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_myprofile_oval_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shape_rect_999_white_fill_gray300_line_1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/iv_myprofile_camera"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_camera"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.435"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="visible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 이름 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_myprofile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_myprofile_photo"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tv_myprofile_current_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="김지각"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="님"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/tv_myprofile_current_name"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 바텀 bg -->
        <View
            android:id="@+id/view_myprofile_bottom_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_bottom"
            android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@id/cl_myprofile_name"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <!-- 이름 -->
        <TextView
            android:id="@+id/tv_myprofile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="이름"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_900"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_myprofile_bottom_bg"
            android:layout_marginStart="32dp"
            android:layout_marginTop="26dp"/>

        <TextView
            android:id="@+id/tv_myprofile_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="김지각"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_500"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_myprofile_name"
            android:layout_marginEnd="60dp"/>

        <ImageView
            android:id="@+id/iv_myprofile_name_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/gray_500"
            app:layout_constraintTop_toTopOf="@id/tv_myprofile_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_myprofile_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>

        <!-- 평균 준비 시간 -->
        <TextView
            android:id="@+id/tv_myprofile_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="평균 준비 시간"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_900"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_myprofile_name"
            android:layout_marginStart="32dp"
            android:layout_marginTop="41dp"/>

        <TextView
            android:id="@+id/tv_myprofile_time_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="1시간"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_500"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_myprofile_time"
            android:layout_marginEnd="60dp"/>

        <ImageView
            android:id="@+id/iv_myprofile_time_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/gray_500"
            app:layout_constraintTop_toTopOf="@id/tv_myprofile_time"
            app:layout_constraintBottom_toBottomOf="@id/tv_myprofile_time"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>

        <!-- 여유 정도 -->
        <TextView
            android:id="@+id/tv_myprofile_spare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="여유 정도"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_900"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_myprofile_time"
            android:layout_marginStart="32dp"
            android:layout_marginTop="41dp"/>

        <TextView
            android:id="@+id/tv_myprofile_spare_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="여유"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_500"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_myprofile_spare"
            android:layout_marginEnd="60dp"/>

        <ImageView
            android:id="@+id/iv_myprofile_spare_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/gray_500"
            app:layout_constraintTop_toTopOf="@id/tv_myprofile_spare"
            app:layout_constraintBottom_toBottomOf="@id/tv_myprofile_spare"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>

        <!-- 로그아웃 -->
        <TextView
            android:id="@+id/tv_myprofile_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="로그아웃"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_900"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_myprofile_spare"
            android:layout_marginStart="32dp"
            android:layout_marginTop="41dp"/>

        <ImageView
            android:id="@+id/iv_myprofile_logout_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/gray_500"
            app:layout_constraintTop_toTopOf="@id/tv_myprofile_logout"
            app:layout_constraintBottom_toBottomOf="@id/tv_myprofile_logout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>

        <!-- 회원탈퇴 btn -->
        <TextView
            android:id="@+id/tv_myprofile_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect_999_white_fill_gray300_line_2"
            android:text="회원 탈퇴"
            android:textColor="@color/gray_600"
            android:textSize="17dp"
            android:fontFamily="@font/pretendard_regular"
            android:paddingVertical="10dp"
            android:paddingHorizontal="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_myprofile_logout"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>