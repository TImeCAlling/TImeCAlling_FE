<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_schedule_top_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:background="@color/mint_100"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tv_schedule_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="20XX년 X월"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/gray_600"
                        android:layout_marginTop="38dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tv_schedule_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘 일정"
                        android:textSize="30sp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/gray_900"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_schedule_date"
                        app:layout_constraintStart_toStartOf="@id/tv_schedule_date"/>

                    <LinearLayout
                        android:id="@+id/layout_calendar_date_pick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_schedule_today"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_rect_39_mint_fill"
                            android:layout_weight="1"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="16dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="수"
                                android:textSize="15sp"
                                android:fontFamily="@font/pretendard_regular"
                                android:textColor="@color/white"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="12"
                                android:textSize="25sp"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="16dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="목"
                                android:textSize="15sp"
                                android:fontFamily="@font/pretendard_regular"
                                android:textColor="@color/gray_500"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="15"
                                android:textSize="25sp"
                                android:textColor="@color/gray_500"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="16dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="금"
                                android:textSize="15sp"
                                android:fontFamily="@font/pretendard_regular"
                                android:textColor="@color/gray_500"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="16"
                                android:textSize="25sp"
                                android:textColor="@color/gray_500"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="16dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="토"
                                android:textSize="15sp"
                                android:fontFamily="@font/pretendard_regular"
                                android:textColor="@color/gray_500"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="17"
                                android:textSize="25sp"
                                android:textColor="@color/gray_500"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="16dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="일"
                                android:textSize="15sp"
                                android:fontFamily="@font/pretendard_regular"
                                android:textColor="@color/gray_500"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="18"
                                android:textSize="25sp"
                                android:textColor="@color/gray_500"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="16dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="월"
                                android:textSize="15sp"
                                android:fontFamily="@font/pretendard_regular"
                                android:textColor="@color/gray_500"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="19"
                                android:textSize="25sp"
                                android:textColor="@color/gray_500"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="16dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="화"
                                android:textSize="15sp"
                                android:fontFamily="@font/pretendard_regular"
                                android:textColor="@color/gray_500"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="10"
                                android:textSize="25sp"
                                android:textColor="@color/gray_500"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/layout_no_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="170dp"
                    android:layout_marginBottom="200dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_schedule_top_section">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_no_schedule_big" />

                    <TextView
                        style="@style/TextAppearance.TimeCAlling.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘은 예정된 일정이 없어요\n새롭게 추가해 주세요!"
                        android:textAlignment="center"
                        android:textColor="@color/gray_600" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressbar_calendar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_schedule_top_section"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_calendar_detail_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_today_schedule_detail"
                    android:layout_marginTop="22dp"
                    android:paddingHorizontal="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_schedule_top_section"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/view_bottom_sheet_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bottomsheet_background"
            android:visibility="invisible"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bottom_sheet"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:id="@+id/view_calendar_handle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/layout_detail_top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/view_calendar_handle">

                <ImageView
                    android:id="@+id/iv_detail_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일정 상세"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/gray_800"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/iv_detail_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_more"/>
            </LinearLayout>

            <View
                android:id="@+id/view_detail_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_300"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/layout_detail_top_bar"/>
            <androidx.core.widget.NestedScrollView
                android:id="@+id/layout_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view_detail_divider">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layout_detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_rect_999_white_fill_gray300_line_1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <TextView
                            android:id="@+id/tv_detail_time_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오전"
                            android:fontFamily="@font/pretendard_regular"
                            android:textSize="16sp"
                            android:textColor="@color/gray_700"/>
                        <TextView
                            android:id="@+id/tv_detail_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:00"
                            android:textColor="@color/mint_600"
                            style="@style/TextAppearance.TimeCAlling.Head4.Bold"
                            android:layout_marginStart="4dp"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="컴퓨터 구조"
                        style="@style/TextAppearance.TimeCAlling.Head1.Bold"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/layout_detail_time"
                        app:layout_constraintStart_toStartOf="@id/layout_detail_time"
                        app:layout_constraintEnd_toEndOf="@id/layout_detail_time"/>
                    <LinearLayout
                        android:id="@+id/layout_detail_members"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/tv_detail_title"
                        app:layout_constraintStart_toStartOf="@id/tv_detail_title"
                        app:layout_constraintEnd_toEndOf="@id/tv_detail_title">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_detail_member_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="999dp"
                            android:layout_marginVertical="1dp"
                            android:layout_marginEnd="-12dp">
                            <ImageView
                                android:id="@+id/img_detail_member_first"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/shape_rect_999_mint_fill"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_detail_member_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="999dp"
                            android:layout_marginVertical="1dp"
                            android:layout_marginEnd="-12dp">
                            <ImageView
                                android:id="@+id/img_detail_member_second"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/shape_rect_999_mint_fill"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_detail_member_third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="999dp"
                            android:layout_marginVertical="1dp"
                            android:layout_marginEnd="-12dp">
                            <ImageView
                                android:id="@+id/img_detail_member_third"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/shape_rect_999_mint_fill"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/layout_detail_extra_members"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="999dp"
                            android:background="@drawable/shape_rect_999_white_fill_gray300_line_2"
                            android:layout_margin="2dp">
                            <TextView
                                android:id="@+id/tv_detail_extra_members"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="@style/TextAppearance.TimeCAlling.Body2"
                                android:textStyle="bold"
                                android:textColor="@color/gray_600"
                                android:gravity="center"
                                android:text="+3" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_detail_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/shape_rect_16_white_fill_gray300_line_2"
                        app:layout_constraintTop_toBottomOf="@id/layout_detail_members"
                        android:padding="16dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="40dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit_note"/>
                        <TextView
                            android:id="@+id/tv_detail_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.TimeCAlling.Body1"
                            android:text="10분전에는 강의실 도착하기.."
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_detail_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/shape_rect_16_white_fill_gray300_line_2"
                        app:layout_constraintTop_toBottomOf="@id/layout_detail_desc"
                        android:padding="16dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="12dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_detail_calendar"/>
                        <TextView
                            android:id="@+id/tv_detail_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.TimeCAlling.Body1"
                            android:text="2025.02.12"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_detail_location_and_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rect_16_white_fill_gray300_line_2"
                        app:layout_constraintTop_toBottomOf="@id/layout_detail_date"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="12dp"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/img_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가톨릭대학교 성심교정"
                            style="@style/TextAppearance.TimeCAlling.Body1"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/img_location"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="19dp"
                            android:paddingEnd="12dp"
                            android:paddingVertical="8dp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/shape_rect_61_gray200_fill"
                            app:layout_constraintTop_toBottomOf="@id/img_location">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="소요시간"
                                style="@style/TextAppearance.TimeCAlling.Body1"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@id/img_location"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_detail_hour"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textSize="32sp"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:textColor="@color/gray_700"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="시간"
                                    style="@style/TextAppearance.TimeCAlling.Body1"
                                    android:textColor="@color/gray_700"/>

                                <TextView
                                    android:id="@+id/tv_detail_minute"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20"
                                    android:layout_marginStart="8dp"
                                    android:textSize="32sp"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:textColor="@color/gray_700"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="분"
                                    style="@style/TextAppearance.TimeCAlling.Body1"
                                    android:textColor="@color/gray_700"/>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <LinearLayout
                        android:id="@+id/layout_detail_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/shape_rect_16_white_fill_gray300_line_2"
                        app:layout_constraintTop_toBottomOf="@id/layout_detail_location_and_time"
                        android:padding="16dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="12dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_notification"/>
                        <TextView
                            android:id="@+id/tv_detail_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.TimeCAlling.Body1"
                            android:text="딱딱"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_detail_repeat_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/shape_rect_16_white_fill_gray300_line_2"
                        app:layout_constraintTop_toBottomOf="@id/layout_detail_type"
                        android:padding="16dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="12dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_calendar_repeat"/>
                        <TextView
                            android:id="@+id/tv_detail_repeat_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.TimeCAlling.Body1"
                            android:text="매주 수요일 반복"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_detail_music"
                        android:layout_width="match_parent"
