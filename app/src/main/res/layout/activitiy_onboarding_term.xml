<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="23dp">

            <ImageView
                android:id="@+id/iv_add_schedule_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_add_schedule_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                style="@style/TextAppearance.TimeCAlling.Head2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_onboarding_term_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="서비스 이용 동의"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/topbar"/>

        <TextView
            android:id="@+id/tv_onboarding_term_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="서비스 이용 약관에 동의해주세요"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_500"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_onboarding_term_title"/>


        <!-- 이용약관 -->

        <!-- 버튼 1 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_onboarding_term_btn_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.058"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_onboarding_term_subtitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="44dp">

            <ImageView
                android:id="@+id/iv_onboarding_term_unselected_oval_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/shape_rect_999_gray300_fill"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_onboarding_term_unselected_check_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_check_white"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="visible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_onboarding_term_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="모두 동의"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/cl_onboarding_term_btn_1"
            app:layout_constraintBottom_toBottomOf="@id/cl_onboarding_term_btn_1"
            app:layout_constraintStart_toEndOf="@id/cl_onboarding_term_btn_1"/>

        <ImageView
            android:id="@+id/iv_onboarding_term_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_onboarding_term_btn_1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"/>


        <!-- 버튼 2 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_onboarding_term_btn_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.048"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_onboarding_term_btn_1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="44dp">

            <ImageView
                android:id="@+id/iv_onboarding_term_unselected_oval_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/shape_rect_999_gray300_fill"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_onboarding_term_unselected_check_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_check_white"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="visible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_onboarding_term_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="만 14세 이상입니다."
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black_700"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/cl_onboarding_term_btn_2"
            app:layout_constraintBottom_toBottomOf="@id/cl_onboarding_term_btn_2"
            app:layout_constraintStart_toEndOf="@id/cl_onboarding_term_btn_2"/>

        <!-- arrow 버튼 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_onboarding_term_arrow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.075"
            app:layout_constraintStart_toEndOf="@id/tv_onboarding_term_2"
            app:layout_constraintTop_toTopOf="@id/tv_onboarding_term_2"
            app:layout_constraintBottom_toBottomOf="@id/tv_onboarding_term_2"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/iv_onboarding_term_arrow_down"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_onboarding_term_arrow_up"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_arrow_up"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_onboarding_term_moreView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_onboarding_term_btn_2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:paddingTop="10dp"
            android:visibility="visible">

            <!-- 버튼 3 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_onboarding_term_btn_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.048"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_onboarding_term_unselected_oval_3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/shape_rect_999_gray300_fill"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/iv_onboarding_term_unselected_check_3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_check_white"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="visible"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_onboarding_term_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="(필수) 서비스 이용약관"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black_700"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@id/cl_onboarding_term_btn_3"
                app:layout_constraintBottom_toBottomOf="@id/cl_onboarding_term_btn_3"
                app:layout_constraintStart_toEndOf="@id/cl_onboarding_term_btn_3"/>


            <!-- 버튼 4 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_onboarding_term_btn_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.048"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_onboarding_term_btn_3"
                android:layout_marginTop="28dp">

                <ImageView
                    android:id="@+id/iv_onboarding_term_unselected_oval_4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/shape_rect_999_gray300_fill"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/iv_onboarding_term_unselected_check_4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_check_white"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="visible"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_onboarding_term_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="(필수) 개인정보 수집/이용 동의"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black_700"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@id/cl_onboarding_term_btn_4"
                app:layout_constraintBottom_toBottomOf="@id/cl_onboarding_term_btn_4"
                app:layout_constraintStart_toEndOf="@id/cl_onboarding_term_btn_4"/>

            <!-- 버튼 5 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_onboarding_term_btn_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.048"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_onboarding_term_btn_4"
                android:layout_marginTop="28dp">

                <ImageView
                    android:id="@+id/iv_onboarding_term_unselected_oval_5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/shape_rect_999_gray300_fill"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/iv_onboarding_term_unselected_check_5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_check_white"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="visible"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_onboarding_term_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="(필수) 위치 정보 제공"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black_700"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@id/cl_onboarding_term_btn_5"
                app:layout_constraintBottom_toBottomOf="@id/cl_onboarding_term_btn_5"
                app:layout_constraintStart_toEndOf="@id/cl_onboarding_term_btn_5"/>


            <!-- 버튼 5 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_onboarding_term_btn_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.048"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_onboarding_term_btn_5"
                android:layout_marginTop="28dp">

                <ImageView
                    android:id="@+id/iv_onboarding_term_unselected_oval_6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/shape_rect_999_gray300_fill"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/iv_onboarding_term_unselected_check_6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_check_white"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="visible"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_onboarding_term_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="마케팅 수신 동의"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black_700"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@id/cl_onboarding_term_btn_6"
                app:layout_constraintBottom_toBottomOf="@id/cl_onboarding_term_btn_6"
                app:layout_constraintStart_toEndOf="@id/cl_onboarding_term_btn_6"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_onboarding_term_next"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect_8_mint_main_fill"
            android:clickable="false"
            android:fontFamily="@font/pretendard_bold"
            android:lineHeight="25dp"
            android:text="다음"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="48dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>