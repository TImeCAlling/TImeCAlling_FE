<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.umc.timeCAlling.presentation.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addScheduleTab"
            app:destination="@id/addScheduleTab"/>
        <action
            android:id="@+id/action_homeFragment_to_scheduleListFragment"
            app:destination="@id/scheduleListFragment" />
    </fragment>

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.umc.timeCAlling.presentation.calendar.CalendarFragment"
        android:label="CalendarFragment"
        tools:layout="@layout/fragment_calendar"/>

    <fragment
        android:id="@+id/mypageFragment"
        android:name="com.umc.timeCAlling.presentation.mypage.MypageFragment"
        android:label="MypageFragment"
        tools:layout="@layout/fragment_mypage"/>

    <navigation android:id="@+id/addScheduleTab"
        app:startDestination="@id/addScheduleFragment">
        <fragment
            android:id="@+id/addScheduleFragment"
            android:name="com.umc.timeCAlling.presentation.addSchedule.AddScheduleFragment"
            android:label="AddScheduleFragment"
            tools:layout="@layout/fragment_add_schedule"/>
    </navigation>

    <fragment
        android:id="@+id/scheduleListFragment"
        android:name="com.umc.timeCAlling.presentation.scheduleList.ScheduleListFragment"
        android:label="ScheduleListFragment" />

    <!-- 홈프래그먼트로 전환 -->
    <action
        android:id="@+id/action_global_home"
        app:destination="@id/homeFragment"
        app:popUpTo="@+id/homeFragment"
        app:popUpToInclusive="false" />
</navigation>
