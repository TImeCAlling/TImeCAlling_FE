<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/signupTab">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.umc.timeCAlling.presentation.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addScheduleTab"
            app:destination="@id/addScheduleTab"/>
        <action
            android:id="@+id/action_homeFragment_to_calendarFragment"
            app:destination="@id/calendarFragment" />
        <action
            android:id="@+id/action_homeFragment_to_mypageTab"
            app:destination="@id/mypageTab" />
        <action
            android:id="@+id/action_homeFragment_to_signupFragment"
            app:destination="@id/signupFragment"/>
    </fragment>

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.umc.timeCAlling.presentation.calendar.CalendarFragment"
        android:label="CalendarFragment"
        tools:layout="@layout/fragment_calendar">
        <action
            android:id="@+id/action_calendarFragment_to_addScheduleTab"
            app:destination="@id/addScheduleTab" />
        <action
            android:id="@+id/action_calendarFragment_to_wakeupFragment"
            app:destination="@id/wakeupFragment"/>
    </fragment>
    <fragment
        android:id="@+id/wakeupFragment"
        android:name="com.umc.timeCAlling.presentation.calendar.wakeup.WakeupFragment"
        android:label="WakeupFragment"
        tools:layout="@layout/fragment_wakeup">
    </fragment>

    <navigation
        android:id="@+id/mypageTab"
        app:startDestination="@id/mypageFragment">
        <fragment
            android:id="@+id/mypageFragment"
            android:name="com.umc.timeCAlling.presentation.mypage.MypageFragment"
            android:label="MypageFragment"
            tools:layout="@layout/fragment_mypage">
            <action
                android:id="@+id/action_mypageFragment_to_myprofileFragment"
                app:destination="@id/myprofileFragment"/>
        </fragment>
        <fragment
            android:id="@+id/myprofileFragment"
            android:name="com.umc.timeCAlling.presentation.mypage.MyprofileFragment"
            android:label="MyprofileFragment"
            tools:layout="@layout/fragment_myprofile"/>
    </navigation>

    <navigation
        android:id="@+id/addScheduleTab"
        app:startDestination="@id/addScheduleFragment">
        <fragment
            android:id="@+id/addScheduleFragment"
            android:name="com.umc.timeCAlling.presentation.addSchedule.AddScheduleFragment"
            android:label="AddScheduleFragment"
            tools:layout="@layout/fragment_add_schedule">
            <action
                android:id="@+id/action_addScheduleFragment_to_locationSearchFragment"
                app:destination="@id/locationSearchFragment"/>
            <action
                android:id="@+id/action_addScheduleFragment_to_addScheduleSecondFragment"
                app:destination="@id/addScheduleSecondFragment"/>
        </fragment>
        <fragment
            android:id="@+id/locationSearchFragment"
            android:name="com.umc.timeCAlling.presentation.addSchedule.LocationSearchFragment"
            android:label="LocationSearchFragment"
            tools:layout="@layout/fragment_location_search">
            <action
                android:id="@+id/action_locationSearchFragment_to_locationResultFragment"
                app:destination="@id/locationResultFragment"/>
        </fragment>
        <fragment
            android:id="@+id/locationResultFragment"
            android:name="com.umc.timeCAlling.presentation.addSchedule.LocationResultFragment"
            android:label="LocationResultFragment"
            tools:layout="@layout/fragment_location_result">
            <action
                android:id="@+id/action_locationResultFragment_to_addScheduleFragment"
                app:destination="@id/addScheduleFragment"/>
        </fragment>
        <fragment
            android:id="@+id/addScheduleSecondFragment"
            android:name="com.umc.timeCAlling.presentation.addSchedule.AddScheduleSecondFragment"
            android:label="AddScheduleSecondFragment"
            tools:layout="@layout/fragment_add_schedule_second">
            <action
                android:id="@+id/action_addScheduleSecondFragment_to_addScheduleSuccessFragment"
                app:destination="@id/addScheduleSuccessFragment"/>
            <action
                android:id="@+id/action_addScheduleSecondFragment_to_categoryEditFragment"
                app:destination="@id/categoryEditFragment"/>
        </fragment>
        <fragment
            android:id="@+id/categoryEditFragment"
            android:name="com.umc.timeCAlling.presentation.addSchedule.CategoryEditFragment"
            android:label="CategoryEditFragment"
            tools:layout="@layout/fragment_category_edit">
            <action
                android:id="@+id/action_categoryEditFragment_to_addScheduleSecondFragment"
                app:destination="@id/addScheduleSecondFragment"/>
        </fragment>
        <fragment
            android:id="@+id/addScheduleSuccessFragment"
            android:name="com.umc.timeCAlling.presentation.addSchedule.AddScheduleSuccessFragment"
            android:label="AddScheduleSuccessFragment"
            tools:layout="@layout/fragment_add_schedule_success">
            <action
                android:id="@+id/action_addScheduleSuccessFragment_to_homeFragment"
                app:destination="@id/homeFragment"/>
        </fragment>
    </navigation>

    <!-- 홈프래그먼트로 전환 -->
    <action
        android:id="@+id/action_global_home"
        app:destination="@id/homeFragment"
        app:popUpTo="@+id/homeFragment"
        app:popUpToInclusive="false" />

    <!-- Signup flow -->
    <navigation
        android:id="@+id/signupTab"
        app:startDestination="@id/signupFragment">
        <action
            android:id="@+id/action_signupFragment_to_homeFragment"
            app:destination="@id/homeFragment"/>

        <fragment
            android:id="@+id/signupFragment"
            android:name="com.umc.timeCAlling.presentation.signup.SignupFragment"
            android:label="SignupFragment"
            tools:layout="@layout/fragment_signup">
            <action
                android:id="@+id/action_signupFragment_to_signupTermFragment"
                app:destination="@id/signupTermFragment"/>
        </fragment>

        <fragment
            android:id="@+id/signupTermFragment"
            android:name="com.umc.timeCAlling.presentation.signup.SignupTermFragment"
            android:label="SignupTermFragment"
            tools:layout="@layout/fragment_signup_term">
            <action
                android:id="@+id/action_signupTermFragment_to_signupPhotoFragment"
                app:destination="@id/signupPhotoFragment"/>
        </fragment>

        <fragment
            android:id="@+id/signupPhotoFragment"
            android:name="com.umc.timeCAlling.presentation.signup.SignupPhotoFragment"
            android:label="SignupPhotoFragment"
            tools:layout="@layout/fragment_signup_photo">
            <action
                android:id="@+id/action_signupPhotoFragment_to_signupNameFragment"
                app:destination="@id/signupNameFragment"/>
        </fragment>

        <fragment
            android:id="@+id/signupNameFragment"
            android:name="com.umc.timeCAlling.presentation.signup.SignupNameFragment"
            android:label="SignupNameFragment"
            tools:layout="@layout/fragment_signup_name">
            <action
                android:id="@+id/action_signupNameFragment_to_signupTimeFragment"
                app:destination="@id/signupTimeFragment"/>
        </fragment>

        <fragment
            android:id="@+id/signupTimeFragment"
            android:name="com.umc.timeCAlling.presentation.signup.SignupTimeFragment"
            android:label="SignupTimeFragment"
            tools:layout="@layout/fragment_signup_time">
            <action
                android:id="@+id/action_signupTimeFragment_to_signupSpareFragment"
                app:destination="@id/signupSpareFragment"/>
        </fragment>

        <fragment
            android:id="@+id/signupSpareFragment"
            android:name="com.umc.timeCAlling.presentation.signup.SignupSpareFragment"
            android:label="SignupSpareFragment"
            tools:layout="@layout/fragment_signup_spare">
            <action
                android:id="@+id/action_signupSpareFragment_to_signupCompleteFragment"
                app:destination="@id/signupCompleteFragment"/>
        </fragment>

        <fragment
            android:id="@+id/signupCompleteFragment"
            android:name="com.umc.timeCAlling.presentation.signup.SignupCompleteFragment"
            android:label="SignupCompleteFragment"
            tools:layout="@layout/fragment_signup_complete">
            <action
                android:id="@+id/action_signupCompleteFragment_to_homeFragment"
                app:destination="@id/homeFragment"/>
        </fragment>
    </navigation>
</navigation>
